<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_andro_print"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.PrintActivity1">

    <Button
        android:text="Print Large Image"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/btLargeLogoPrint"
        android:layout_below="@+id/btLogoPrint"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Print Device \ninformation"
        android:layout_width="wrap_content"
        android:id="@+id/btDeviceSettings"
        android:layout_below="@+id/btLargeLogoPrint"
        android:layout_centerHorizontal="true"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/btLargeLogoPrint"
        android:layout_alignStart="@+id/btLogoPrint"/>

    <Button
        android:text="Print Small Image"
        android:layout_width="wrap_content"
        android:id="@+id/btLogoPrint"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/btLargeLogoPrint"
        android:layout_marginTop="13dp" />

    <Button
        android:text="Test"
        android:layout_width="wrap_content"
        android:id="@+id/button_test"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btLargeLogoPrint"
        android:layout_alignEnd="@+id/btDeviceSettings" />
</RelativeLayout>
